<body>
  <img id="altar-spirit" src="frame01.png" alt="Spirit Animation">
  <script>
    // --- Animation settings ---
    const frameCount = 10; // Total frames
    const framePrefix = "frame"; // File name prefix
    const frameExt = ".png";
    const delay = 350; // milliseconds per frame (for a slow, meditative pulse)

    let frame = 1;
    const spiritImg = document.getElementById('altar-spirit');

    setInterval(() => {
      frame = frame < frameCount ? frame + 1 : 1;
      let frameNum = frame.toString().padStart(2, '0');
      spiritImg.src = `${framePrefix}${frameNum}${frameExt}`;
    }, delay);
  </script>
</body>
